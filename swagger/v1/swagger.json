{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/articles": {
      "post": {
        "summary": "Creates a article",
        "tags": [
          "articles"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "article",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "article": {
                  "name": {
                    "type": "string"
                  },
                  "photo_url": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "name",
                "status"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "article created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/api/v1/articles/{id}": {
      "get": {
        "summary": "Retrieves a article",
        "tags": [
          "articles"
        ],
        "produces": [
          "application/json",
          "application/xml"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "name found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "photo_url": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "status"
              ]
            }
          },
          "404": {
            "description": "article not found"
          }
        }
      }
    }
  }
}